        // Load users, tasks v√† ph√¢n c√¥ng t·ª´ API
        async function loadUsersTasksAndAssignments() {
            try {
                const [usersRes, tasksRes, assignmentsRes] = await Promise.all([
                    fetch('/api/users/get'),
                    fetch('/api/tasks/get'),
                    fetch('/api/taskAssignment/get')  // th√™m API l·∫•y ph√¢n c√¥ng
                ]);

                users = await usersRes.json();
